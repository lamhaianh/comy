<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">

  <!-- Prevent java.lang.IllegalStateException: Application was not properly initialized at startup, could not find Factory: javax.faces.context.FacesContextFactory -->

  <listener>
    <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.sun.faces.application.WebappLifecycleListener</listener-class>
  </listener>
  
  <!-- Scalantra filters -->

  <filter>
    <filter-name>API</filter-name>
    <filter-class>comy.controller.Api</filter-class>
  </filter>
  <filter>
    <filter-name>QrCode</filter-name>
    <filter-class>comy.controller.QrCode</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>API</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>QrCode</filter-name>
    <url-pattern>/user/qrcode</url-pattern>
  </filter-mapping>

  <!-- Protect JSF admin pages -->

  <filter>
    <filter-name>PageLevelAuthenticator</filter-name>
    <filter-class>comy.controller.PageLevelAuthenticator</filter-class>
  </filter>
  <filter>
    <filter-name>OpenIdReturnPoint</filter-name>
    <filter-class>comy.controller.OpenIdReturnPoint</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>PageLevelAuthenticator</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>OpenIdReturnPoint</filter-name>
    <url-pattern>/open_id_return_point</url-pattern>
  </filter-mapping>

  <!-- JSF -->

  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>

  <!-- Hide JSF .xhtml templates -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Hide JSF .xhtml templates</web-resource-name>
      <url-pattern>*.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Hide JSF .xhtml templates</role-name>
    </auth-constraint>
  </security-constraint>

  <servlet>
    <servlet-name>FacesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FacesServlet</servlet-name>
    <url-pattern>*.gnt</url-pattern>
  </servlet-mapping>

  <!-- http://stackoverflow.com/questions/3297634/explicit-directory-for-jsf-template-files -->

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
